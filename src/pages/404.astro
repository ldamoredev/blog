---
import { Image } from "astro:assets";
import aboutImg from "@/assets/about-blog.png";
import PageLayout from "@/layouts/Base.astro";

const meta = {
  description: "Oops! It looks like this page is lost in space!",
  title: "Oops! You found a missing page!",
};
---

<PageLayout meta={meta}>
  <h1 class="title mb-6" style="text-align: center">404 | Oops something went wrong</h1>
  <p class="mb-8" style="text-align: center">Please use the navigation to find your way back</p>
  <div class="my-4 grid justify-center">
    <Image
        src={aboutImg}
        alt="A cartoon cactus looking at the 'Astro.build' logo"
        loading="eager"
    />
  </div>
</PageLayout>
